# This workflow automates the deployment of your React app to GitHub Pages
name: Deploy to GitHub Pages

# Trigger the workflow on pushes to the main branch
on:
  push:
    branches: [main]

# Define the jobs that will run in this workflow
jobs:
  build-and-deploy:
    # The type of runner the job will run on
    runs-on: ubuntu-latest

    # Steps that the job will execute
    steps:
      # Checkout the code from the repository
      - name: Checkout
        uses: actions/checkout@v4 # Use the latest version

      # Setup Node.js environment
      - name: Setup Node.js
        uses: actions/setup-node@v4 # Use the latest version
        with:
          node-version: 20 # Or your preferred Node.js version (16, 18, etc.)

      # Install dependencies
      - name: Install dependencies
        run: npm ci # Use npm ci for faster and more reliable builds

      # Build the React application
      - name: Build
        run: npm run build

      # Deploy to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@v4 # Use the latest version
        with:
          branch: gh-pages # The branch to deploy to
          folder: dist # The folder containing the build output
